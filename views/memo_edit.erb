<p class="error-msg"><%= @error_msg unless @error_msg.nil? %></p>
<div class="form-wrapper">
  <form action="/memo/<%= @memo[0] %>" method="post">
    <div class="form-item">
      <label for="title">タイトル</label><br>
      <input id="title" name="title" type="text" value="<%= @memo[1] %>">
    </div>
    <div class="form-item">
      <label for="content">内容</label><br>
      <textarea name="content" id="content" cols="30" rows="10"><%= @memo[2] %></textarea>
    </div>
    <div class="form-item">
      <input type="hidden" name="_method" value="patch">
      <input type="submit" value="変更" class="btn">
    </div>
  </form>
</div>
